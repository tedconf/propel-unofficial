<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<database name="treetest" defaultIdMethod="native">
	<table name="test" treeMode="NestedSet" description="Test">
		<column
			name="id"
			required="true"
			primaryKey="true"
			autoIncrement="true"
			type="INTEGER"
			description="Node Id"/>
		<column
			name="left"
			required="true"
			nestedSetLeftKey="true"
			type="INTEGER"
			description="Node Left Key"/>
		<column
			name="right"
			required="true"
			nestedSetRightKey="true"
			type="INTEGER"
			description="Node Right Key"/>
		<column
			name="parent"
			required="true"
			nestedSetParentKey="true"
			type="INTEGER"
			description="Node Parent Key"/>
		<column
			name="scope"
			required="true"
			nestedSetScopeKey="true"
			type="INTEGER"
			description="Node Scope Key"/>
		<column
			name="label"
			required="true"
			type="VARCHAR"
			size="10"
			description="Label"/>
		<unique name="pk">
			<unique-column name="label"/>
		</unique>
		<index name="left">
			<index-column name="left"/>
		</index>
		<index name="right">
			<index-column name="right"/>
		</index>
		<index name="parent">
			<index-column name="parent"/>
		</index>
		<index name="scope">
			<index-column name="scope"/>
		</index>
	</table>
</database>
